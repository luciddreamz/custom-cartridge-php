ServerRoot "<%= ENV['OPENSHIFT_PHP_DIR'] %>"
DocumentRoot "<%= ENV['OPENSHIFT_PHP_DOCUMENT_ROOT'] || "#{ENV['OPENSHIFT_REPO_DIR']}php" %>"
Listen <%= "#{ENV['OPENSHIFT_PHP_IP']}:#{ENV['OPENSHIFT_PHP_PORT']}" %>
User  <%= ENV['OPENSHIFT_GEAR_UUID'] %>
Group <%= ENV['OPENSHIFT_GEAR_UUID'] %>
ErrorLog "|tee"
CustomLog "|tee" combined
<IfVersion >= 2.4>
DefaultRuntimeDir "<%= "#{ENV['OPENSHIFT_PHP_DIR']}run"%>"
</IfVersion>

<Directory "<%= ENV['OPENSHIFT_PHP_DOCUMENT_ROOT'] || "#{ENV['OPENSHIFT_REPO_DIR']}php" %>">
  Options Indexes FollowSymLinks
  AllowOverride All
  Order Allow,Deny
  Allow from All
  <Files "deplist.txt">
    Order Deny,Allow
    Deny from All
  </Files>
</Directory>

<Directory "<%= "#{ENV['OPENSHIFT_REPO_DIR']}.openshift" %>">
  AllowOverride None
  Order Deny,Allow
  Deny from All
</Directory>

LoadModule proxy_module modules/mod_proxy.so
LoadModule proxy_http_module modules/mod_proxy_http.so

ProxyTimeout 300
ProxyPreserveHost On

ProxyPass /app/assets https://assets.openshift.net/app/assets
ProxyPass /content https://assets.openshift.net/content
ProxyPass /app/account/new https://openshift.redhat.com/app/account/new
ProxyPass /app/account/new/ !
ProxyPass /app/account/complete https://openshift.redhat.com/app/account/complete
ProxyPass /app/account/complete/ !
ProxyPass /app/account/ !

<Limit POST>
    ProxyPass /app/account https://openshift.redhat.com/app/account
</Limit>

<LocationMatch "^/app/assets(-dyn)?/.*\.(ttf|otf|eot|woff)$">
    Header set Access-Control-Allow-Origin "*"
</LocationMatch>

<LocationMatch "^/app/assets(-dyn)?/.*">
    Header set Cache-Control "max-age=604800"
</LocationMatch>

<LocationMatch "^/content/.*\.(ttf|otf|eot|woff)$">
    Header set Access-Control-Allow-Origin "*"
</LocationMatch>

<LocationMatch "^/content/.*">
    Header set Cache-Control "max-age=604800"
</LocationMatch>